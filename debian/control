Build-Depends: debhelper (>= 4.1.0), gettext, libgtk2.0-dev (>= 2.4.1-3), liborbit2-dev (>= 1:2.10.2-1.1), libpopt-dev, libxml2-dev (>= 2.4.23), libgconf2-dev (>= 2.6.1-2), libglade2-dev (>= 2.4.0-1), xlibs-dev, xlibs-pic (>= 4.2.1-6), libstartup-notification0-dev (>= 0.7), libxml-parser-perl, gnome-pkg-tools
